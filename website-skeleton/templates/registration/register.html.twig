{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col">
                <h1>Enregistrer un nouvel utilisateur</h1>
                <hr>
            </div>
        </div>
        {{ form_start(registrationForm) }}
        <div class="row justify-content-center">
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.nom) }}
            </div>
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.prenom) }}
            </div>
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.email) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.pseudo) }}
            </div>
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.telephone) }}
            </div>
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.site) }}
            </div>
            <div class="col-12 col-lg-4">
                {{ form_row(registrationForm.roles) }}
            </div>
        </div>
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-outline-dark">Enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
